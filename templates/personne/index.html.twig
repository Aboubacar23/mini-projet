{% extends 'base.html.twig' %}

{% block title %}Personne index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3 text-left">
            <h1>Personnes</h1>
        </div>
        <div class="col-md-3 text-right">
            <a href="{{ path('app_personne_new') }}" class="btn btn-primary btn-sm text-right">Ajouter</a>
        </div>
        <div class="col-md-6 text-right">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-9">
                    {{ form_widget(form) }}  
                </div>
                <div class="col-md-3">
                    <button class="btn btn-info btn-sm">{{ button_label|default('Importer') }}</button>
                </div>
            </div>  
            {{ form_end(form) }}
        </div>
    </div>
    <table id="example" class="table table-striped table-success table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>N°</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th width="200" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% set i = 0 %}
            {% for personne in personnes %}
                {% set i = i + 1 %}
                <tr>
                    <td>{{ i }}</td>
                    <td>{{ personne.nom }}</td>
                    <td>{{ personne.prenom }}</td>
                    <td>{{ personne.email }}</td>
                    <td class="text-center">
                        <a class="btn btn-primary" href="{{ path('app_personne_show', {'id': personne.id}) }}">Détails</a>
                        <a class="btn btn-secondary" href="{{ path('app_personne_edit', {'id': personne.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
<script>
    new DataTable('#example');
</script>
{% endblock %}
